<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="true"
              android:orientation="vertical"
              tools:ignore="MissingPrefix">

    <FrameLayout
        android:id="@+id/scanner_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/payment_confirmation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">


        <android.support.v7.widget.CardView
            android:id="@+id/payment_confirmation_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/colorWhiteText"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="40dp">


                <agency.tango.android.avatarview.views.AvatarView
                    android:id="@+id/merchant_logo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    app:av_text_size_percentage="35"/>


                <TextView
                    android:id="@+id/merchant_name"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merchant_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Gloria Jeans Coffees"
                    android:textColor="#757575"
                    android:textSize="20sp"

                    />


                <TextView
                    android:id="@+id/sale_amount"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="$1400"
                    android:textColor="#757575"
                    android:visibility="gone"
                    android:textSize="70sp"
                    />

                <EditText
                    android:id="@+id/enter_sales"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="#757575"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:textSize="70sp"/>

                <TextView
                    android:id="@+id/enter_sales_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_below="@id/enter_sales"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    fontPath="fonts/Nunito-Regular.ttf"
                    />


                <RelativeLayout
                    android:id="@+id/pay_button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="60dp">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/pay_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimary"
                        android:text="Pay"
                        android:padding="20dp"
                        android:textColor="@color/colorWhiteText"/>

                    <ImageView
                        android:id="@+id/confirmation_bar_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                       />
                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>