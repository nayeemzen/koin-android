<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="true"
              android:orientation="vertical"
              tools:ignore="MissingPrefix">

    <FrameLayout
        android:id="@+id/scanner_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/payment_confirmation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <android.support.v7.widget.CardView
            android:id="@+id/payment_confirmation_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/colorWhiteText"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:id="@+id/payment_in_process_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="40dp"
                android:visibility="gone">


                <agency.tango.android.avatarview.views.AvatarView
                    android:id="@+id/merchant_logo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    app:av_text_size_percentage="35"/>


                <TextView
                    android:id="@+id/merchant_name"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merchant_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Gloria Jeans Coffees"
                    android:textColor="#757575"
                    android:textSize="20sp"
                    />


                <TextView
                    android:id="@+id/sale_amount"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="$1400"
                    android:textColor="#757575"
                    android:textSize="70sp"
                    android:visibility="gone"
                    />

                <EditText
                    android:id="@+id/enter_sales"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#37B3B8"
                    android:textSize="60sp"/>

                <TextView
                    android:id="@+id/enter_sales_message"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/enter_sales"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    />


                <RelativeLayout
                    android:id="@+id/pay_button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="60dp">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/pay_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimary"
                        android:padding="20dp"
                        android:text="Pay"
                        android:textColor="@color/colorWhiteText"/>

                    <ImageView
                        android:id="@+id/confirmation_bar_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/payment_complete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:visibility="visible">

                <agency.tango.android.avatarview.views.AvatarView
                    android:id="@+id/merchant_logo_pay_complete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    app:av_text_size_percentage="35"/>


                <TextView
                    android:id="@+id/merchant_name_pay_complete"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merchant_logo_pay_complete"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Gloria Jeans Coffees"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/sale_amount_payment_complete"
                    fontPath="fonts/Nunito-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merchant_logo_pay_complete"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="$1400"
                    android:textColor="#37B3B8"
                    android:textSize="60sp"
                    android:visibility="visible"
                    />
                <RelativeLayout
                    android:id="@+id/transaction_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/sale_amount_payment_complete">

                    <ImageView
                        android:id="@+id/transaction_state_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@+id/transaction_state_text"
                        android:layout_alignTop="@+id/transaction_state_text"
                        android:layout_alignBottom="@+id/transaction_state_text"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/trans_approved"/>

                    <TextView
                        android:id="@+id/transaction_state_text"
                        fontPath="fonts/Nunito-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Transaction Approved"
                        android:textColor="#37B3B8"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fees_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/transaction_state_layout"
                    android:layout_marginTop="30dp"
                    >

                    <TextView
                        fontPath="fonts/Nunito-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Fees"
                        android:textColor="#757575"
                        android:textSize="16sp"
                        />

                    <TextView
                        fontPath="fonts/Nunito-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0.15"
                        android:textColor="#757575"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/amount_paid_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fees_layout"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        fontPath="fonts/Nunito-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Amount Paid"
                        android:textColor="#757575"
                        android:textSize="16sp"/>

                    <TextView
                        fontPath="fonts/Nunito-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="$1399"
                        android:textColor="#757575"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/date_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount_paid_layout"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        fontPath="fonts/Nunito-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Date"
                        android:textColor="#757575"
                        android:textSize="16sp"/>

                    <TextView
                        fontPath="fonts/Nunito-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="May 24th, 2017, 1:05pm"
                        android:textColor="#757575"
                        android:textSize="16sp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/barcode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_layout"
                    android:layout_above="@+id/done_button"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp">

                    <ImageView
                        android:id="@+id/barcode_image"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/done_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="20dp"
                    android:text="Done"
                    android:textColor="@color/colorWhiteText"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>