<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

    <ImageView
        android:id="@+id/profile_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_noun_invite_friends"
        />

    <TextView
        android:id="@+id/profile_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_header_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/profile_header_icon"
        android:text="Invite Friends"
        android:textSize="16sp"/>
</RelativeLayout>