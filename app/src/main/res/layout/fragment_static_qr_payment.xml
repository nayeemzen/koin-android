<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingPrefix"
                android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/payment_in_process_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="40dp"
        android:visibility="visible">


        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/merchant_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:av_text_size_percentage="35"/>


        <TextView
            android:id="@+id/merchant_name"
            fontPath="fonts/Nunito-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchant_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Gloria Jeans Coffees"
            android:textColor="#757575"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/enter_sales"
            fontPath="fonts/Nunito-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:inputType="number"
            android:text=""
            android:textAlignment="center"
            android:textColor="#37B3B8"
            android:textSize="60sp"/>

        <TextView
            android:id="@+id/enter_sales_message"
            fontPath="fonts/Nunito-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_sales"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textColor="#757575"
            android:textSize="16sp"
            />


        <RelativeLayout
            android:id="@+id/pay_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/pay_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="Pay"
                android:textColor="@color/colorWhiteText"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>