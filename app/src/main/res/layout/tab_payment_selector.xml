<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:ignore="MissingPrefix"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_tab_payment_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_tab_payment_unselected"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/text_tab_payment_selector"
        android:layout_below="@id/image_tab_payment_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:text="@string/payments_title"
        android:visibility="gone"/>

</RelativeLayout>