<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/payment_constraint_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/payment_place_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/payment_constraint_layout"
        app:layout_constraintTop_toTopOf="@+id/payment_constraint_layout"
        android:text="Merchant Name"
        fontPath="fonts/Nunito-Bold.ttf"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/payment_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/payment_place_name"
        app:layout_constraintStart_toStartOf="@id/payment_constraint_layout"
        android:layout_marginTop="5dp"
        android:text="Restaurants"
        fontPath="fonts/Nunito-Regular.ttf"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/payment_constraint_layout"
        app:layout_constraintTop_toTopOf="@+id/payment_place_name"
        android:text="150CAD"
        android:textColor="@color/colorPrimaryDark"
        fontPath="fonts/Nunito-Bold.ttf"
        android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>